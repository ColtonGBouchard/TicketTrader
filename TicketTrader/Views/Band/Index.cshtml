@model IEnumerable<TicketTrader.Models.Band>

@{
    ViewBag.Title = "Index";
}

<h2>Bands</h2>

<div id="eventSearch">
    <form method="get">
        <input type="search" name="searchTerm" />
        <input type="submit" value="Search" class="btn btn-info" />
    </form>
</div>
<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Upcoming", "Event", new { id = item.BandId}, null)
            
        </td>
        @if (User.IsInRole("Admin"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BandId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BandId})
            </td>
        }
    </tr>
}

</table>
